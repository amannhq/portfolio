---
import { SITE, FOOTER_LINKS } from '../consts';

const year = new Date().getFullYear();
---

<footer class="border-t border-[--color-border] py-10">
  <div class="mx-auto w-full max-w-175 px-6">
    <div class="flex flex-col items-center justify-between gap-6 sm:flex-row">
      <nav class="flex items-center gap-6 text-[13px] text-[--color-text-tertiary]" aria-label="Footer links">
        {FOOTER_LINKS.map((link) => (
          <a
            href={link.href}
            target={link.external ? '_blank' : undefined}
            rel={link.external ? 'noopener noreferrer' : undefined}
            class="transition-colors hover:text-[--color-text]"
          >
            {link.label}
          </a>
        ))}
      </nav>
      <p class="m-0 text-[13px] text-[--color-text-tertiary]">
        &copy; {year} {SITE.author}
      </p>
    </div>
  </div>
</footer>
