---
import { SOCIAL } from '../consts';

interface Props {
  status?: string;
  headline: string;
  subheadline: string;
  description: string;
}

const {
  status = 'Open to opportunities',
  headline,
  subheadline,
  description,
} = Astro.props;
---

<section class="relative py-10 md:py-14">
  <div class="animate-fade-in-up mb-8 flex items-center gap-3">
    <span class="status-dot"></span>
    <span class="text-[11px] font-medium uppercase tracking-[0.2em] text-[--color-text-tertiary]">
      {status}
    </span>
  </div>

  <h1 class="animate-fade-in-up delay-100 mb-8 text-[2.75rem] font-normal leading-[1.05] tracking-[-0.04em] md:text-[3.5rem] lg:text-[4rem]">
    {headline}<br class="hidden sm:block" />
    <span class="text-[--color-text-secondary]">{subheadline}</span>
  </h1>

  <p class="animate-fade-in-up delay-200 mb-10 max-w-lg text-base leading-relaxed text-[--color-text-secondary] md:text-lg">
    {description}
  </p>

  <div class="animate-fade-in-up delay-300 flex flex-wrap items-center gap-4">
    <a href={SOCIAL.github} target="_blank" rel="noopener noreferrer" class="btn-secondary">
      <span>GitHub</span>
      <svg class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
      </svg>
    </a>
    <button
      data-cal-link="amanhq/15min"
      data-cal-namespace="15min"
      class="btn-primary"
    >
      <span>Book a call</span>
      <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
        <path d="M5 12h14M12 5l7 7-7 7"/>
      </svg>
    </button>
  </div>
</section>

