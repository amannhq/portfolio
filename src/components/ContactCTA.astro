---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Let's work together",
  description = 'Available for freelance projects and full-time roles.',
} = Astro.props;
---

<section class="mb-8 animate-fade-in-up" style="animation-delay: 1.1s;">
  <div class="rounded-xl border border-[--color-border] bg-[--color-bg-secondary] p-6 md:p-8 transition-all hover:border-[--color-accent]/30 hover:shadow-lg hover:shadow-[--color-accent]/5">
    <div class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
      <div>
        <h2 class="m-0 mb-2 text-lg font-medium">{title}</h2>
        <p class="m-0 text-sm text-[--color-text-secondary]">{description}</p>
      </div>
      <button
        data-cal-link="amanhq/15min"
        data-cal-namespace="15min"
        class="btn-primary shrink-0"
      >
        Book a call
        <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </button>
    </div>
  </div>
</section>
