---
interface Props {
  title?: string;
  about: string;
  skills: readonly string[];
}

const { title = '~/aman', about, skills } = Astro.props;
---

<section class="animate-fade-in-up delay-400 mb-20">
  <div class="terminal-block">
    <div class="terminal-header">
      <div class="flex gap-1.5">
        <span class="terminal-dot red"></span>
        <span class="terminal-dot yellow"></span>
        <span class="terminal-dot green"></span>
      </div>
      <span class="ml-4 text-[11px] text-[--color-text-tertiary]">{title}</span>
    </div>
    <div class="terminal-body space-y-3">
      <div>
        <div class="terminal-line">
          <span class="terminal-prompt">$</span>
          <span class="terminal-command">cat about.md</span>
        </div>
        <div class="mt-2 pl-4 text-[--color-text-secondary]">
          <Fragment set:html={about.replace(/\n/g, '<br/>')} />
        </div>
      </div>
      <div>
        <div class="terminal-line">
          <span class="terminal-prompt">$</span>
          <span class="terminal-command">ls skills/</span>
        </div>
        <div class="mt-2 flex flex-wrap gap-2 pl-4">
          {skills.map((tech) => (
            <span class="text-[--color-accent]">{tech}</span>
          ))}
        </div>
      </div>
      <div class="terminal-line">
        <span class="terminal-prompt">$</span>
        <span class="terminal-cursor">â–Š</span>
      </div>
    </div>
  </div>
</section>

<style>
  .terminal-cursor {
    animation: blink 1s step-end infinite;
    color: var(--color-accent);
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }
</style>
