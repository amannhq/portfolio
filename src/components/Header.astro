---
import { SITE, SOCIAL} from '../consts';
import ThemeToggle from './ThemeToggle.astro';

const pathname = Astro.url.pathname;
---

<header class="sticky top-0 z-50 backdrop-blur-lg">
	<nav class="mx-auto flex h-14 max-w-175 items-center justify-between px-6">
		<a href="/" class="group flex items-center gap-2.5">
			<span class="status-dot h-2! w-2!"></span>
			<span class="text-[13px] font-medium tracking-tight">{SITE.title}</span>
		</a>
		<div class="flex items-center gap-1">
			<a 
				href="/blog" 
				class:list={[
					"rounded-md px-3 py-1.5 text-[13px] transition-colors",
					pathname.startsWith('/blog') 
						? "bg-[--color-bg-tertiary] text-[--color-text]" 
						: "text-[--color-text-secondary] hover:bg-[--color-bg-secondary] hover:text-[--color-text]"
				]}
			>
				Blog
			</a>
			<a 
				href={SOCIAL.github} 
				target="_blank"
				class="rounded-md px-3 py-1.5 text-[13px] text-[--color-text-secondary] transition-colors hover:bg-[--color-bg-secondary] hover:text-[--color-text]"
			>
				GitHub
			</a>
			<div class="ml-2 h-4 w-px bg-[--color-border]"></div>
			<div class="ml-2">
				<ThemeToggle />
			</div>
		</div>
	</nav>
</header>
