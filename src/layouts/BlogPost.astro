---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate } = Astro.props;

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      type="article"
      publishedDate={pubDate}
      modifiedDate={updatedDate}
    />
  </head>
  <body class="flex min-h-screen flex-col">
    <Header />
    <main class="flex-1">
      <article class="py-8">
        <header class="mb-12">
          <a
            href="/blog"
            class="group mb-6 inline-flex items-center gap-2 rounded-full border border-[--color-border] bg-[--color-bg-secondary] px-2.5 py-1 text-xs font-medium text-[--color-text-secondary] transition-colors hover:border-[--color-accent] hover:text-[--color-accent]"
          >
            <svg class="h-3 w-3 transition-transform group-hover:-translate-x-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
              <path d="M19 12H5M12 19l-7-7 7-7"/>
            </svg>
            Back to blog
          </a>
          <div class="mb-4 flex items-center gap-3 text-xs text-[--color-text-tertiary]">
            <time datetime={pubDate.toISOString()} class="flex items-center gap-1.5 text-[--color-text-secondary]">
              <span class="h-1 w-1 rounded-full bg-[--color-accent]"></span>
              {formatDate(pubDate)}
            </time>
            {updatedDate && (
              <>
                <span class="text-[--color-border]">/</span>
                <span>Updated {formatDate(updatedDate)}</span>
              </>
            )}
          </div>
          <h1 class="mb-4 text-2xl font-medium tracking-tight md:text-3xl lg:text-4xl">{title}</h1>
          <p class="mb-8 text-base leading-relaxed text-[--color-text-secondary]">{description}</p>
        </header>

        <div class="prose">
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>

<style>
  .prose {
    line-height: 1.65;
    font-size: 1rem;
    max-width: 70ch;
  }

  .prose :global(h2) {
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    font-size: 1.5rem;
    font-weight: 500;
    letter-spacing: -0.02em;
  }

  .prose :global(h2:not(:first-child)) {
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border-subtle);
  }

  .prose :global(h3) {
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    font-size: 1.15rem;
    font-weight: 500;
    letter-spacing: -0.01em;
  }

  .prose :global(p) {
    margin-bottom: 1.25rem;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: 1.25rem;
    padding-left: 1.25rem;
  }

  .prose :global(li) {
    margin-bottom: 0.5rem;
    padding-left: 0.25rem;
  }
  
  .prose :global(li::marker) {
    color: var(--color-text-tertiary);
  }

  .prose :global(pre) {
    margin: 2rem 0;
  }

  .prose :global(blockquote) {
    margin: 1.75rem 0;
    font-style: italic;
    font-size: 1.05em;
  }

  .prose :global(img) {
    margin: 2.5rem 0;
  }

  .prose :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
    text-underline-offset: 3px;
    text-decoration-thickness: 1px;
  }

  .prose :global(a:hover) {
    color: var(--color-accent-hover);
  }

  .prose :global(strong) {
    color: var(--color-text);
    font-weight: 600;
  }

  .prose :global(hr) {
    margin: 3rem 0;
  }

  .prose :global(code:not(pre code)) {
    font-size: 0.875em;
  }
</style>
