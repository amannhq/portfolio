---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate } = Astro.props;

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      type="article"
      publishedDate={pubDate}
      modifiedDate={updatedDate}
    />
  </head>
  <body class="flex min-h-screen flex-col">
    <Header />
    <main class="flex-1">
      <article class="py-8">
        <header class="mb-12">
          <a
            href="/blog"
            class="mb-8 inline-flex items-center gap-1.5 text-[13px] text-[--color-text-tertiary] transition-colors hover:text-[--color-accent]"
          >
            <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
              <path d="M19 12H5M12 19l-7-7 7-7"/>
            </svg>
            Back to blog
          </a>
          <div class="mb-4 flex items-center gap-3 text-[13px] text-[--color-text-tertiary]">
            <time datetime={pubDate.toISOString()} class="text-[--color-text-secondary]">
              {formatDate(pubDate)}
            </time>
            {updatedDate && (
              <>
                <span class="text-[--color-border]">Â·</span>
                <span>Updated {formatDate(updatedDate)}</span>
              </>
            )}
          </div>
          <h1 class="mb-4 text-[1.75rem] leading-[1.2] tracking-tight md:text-[2.25rem]">{title}</h1>
          <p class="m-0 text-base leading-relaxed text-[--color-text-secondary]">{description}</p>
        </header>

        <div class="prose">
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>

<style>
  .prose {
    line-height: 1.8;
    font-size: 0.9375rem;
  }

  .prose :global(h2) {
    margin-top: 3rem;
    margin-bottom: 1.25rem;
    font-size: 1.375rem;
    font-weight: 500;
  }

  .prose :global(h2:not(:first-child)) {
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border-subtle);
  }

  .prose :global(h3) {
    margin-top: 2.25rem;
    margin-bottom: 1rem;
    font-size: 1.125rem;
    font-weight: 500;
  }

  .prose :global(p) {
    margin-bottom: 1.5rem;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.75rem;
  }

  .prose :global(li) {
    margin-bottom: 0.625rem;
  }

  .prose :global(pre) {
    margin: 2rem 0;
  }

  .prose :global(blockquote) {
    margin: 2rem 0;
  }

  .prose :global(img) {
    margin: 2.5rem 0;
  }

  .prose :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
    text-underline-offset: 3px;
    text-decoration-thickness: 1px;
  }

  .prose :global(a:hover) {
    color: var(--color-accent-hover);
  }

  .prose :global(strong) {
    color: var(--color-text);
    font-weight: 600;
  }

  .prose :global(hr) {
    margin: 3rem 0;
  }

  .prose :global(code:not(pre code)) {
    font-size: 0.875em;
  }
</style>
